root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{htm, html, js, ts, tsx, css, sass, scss, less, svg}]
indent_size = 2

[*.{json, json5}]
indent_size = 2

[*.yml]
indent_size = 2
